            overflow: hidden; /* Prevent scrollbars from button movement */
        }
        h1 { font-size: 2em; }
        button { 
            background: #ff69b4; 
            color: white; 
            border: none; 
            padding: 10px 20px; 
            margin: 10px; 
            border-radius: 10px; 
            cursor: pointer; 
            position: relative; /* Allows absolute positioning for No button */
        }
        #noButton.spinning { 
            animation: spin 1s linear infinite; /* Continuous spin when class is added */
        }
        @keyframes spin { 
            from { transform: rotate(0deg); } 
            to { transform: rotate(360deg); } 
        }
        #response { 
            display: none; 
            font-size: 1.5em; 
            margin-top: 20px; 
        }
        .hearts { 
            position: absolute; 
            top: 0; 
            left: 0; 
            width: 100%; 
            height: 100%; 
            pointer-events: none; 
            z-index: -1; /* Behind content */
        }
