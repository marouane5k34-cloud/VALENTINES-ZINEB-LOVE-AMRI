    <h1>Happy Valentine's Day, Zineb! üíï</h1>
    <p>You mean the world to me. Will you be my Valentine forever?</p>
    <button onclick="answer('yes')">Yes! üòç</button>
    <button id="noButton" onclick="answer('no')">No üò¢</button>
    <div id="response"></div>
    <script>
        function answer(choice) {
            const response = document.getElementById('response');
            if (choice === 'yes') {
                response.innerHTML = "Yay! I love you endlessly! Here's a virtual hug: ü§ó";
            } else {
                response.innerHTML = "Aww, but I'll keep trying! You're still my favorite. üòâ";
            }
            response.style.display = 'block';
        }

        // Make the No button move randomly and spin on hover (evasive and spinning!)
        const noButton = document.getElementById('noButton');
        noButton.addEventListener('mouseover', function() {
            const maxX = window.innerWidth - noButton.offsetWidth;
            const maxY = window.innerHeight - noButton.offsetHeight;
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;
            noButton.style.position = 'absolute';
            noButton.style.left = randomX + 'px';
            noButton.style.top = randomY + 'px';
            noButton.classList.add('spinning'); // Start spinning
        });
    </script>
